@model Web6.Models.Question
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Детали вопроса</h2>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Text</dt>
    <dd class="col-sm-10">@Model.Text</dd>

    <dt class="col-sm-2">Answer</dt>
    <dd class="col-sm-10">@Model.Answer</dd>

    <dt class="col-sm-2">Comment</dt>
    <dd class="col-sm-10">@Model.Comment</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">
        @{
            var cat = Model.Category?.Title
            ?? (ViewBag.Categories as List<Web6.Models.Category>)
            ?.FirstOrDefault(c => c.Id == Model.CategoryId)?.Title;
        }
        @cat
    </dd>
</dl>

<div class="mt-4">
    <a asp-controller="Question" asp-action="All" class="btn btn-primary">
        К списку вопросов
    </a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ml-2">
        Главная
    </a>
</div>
